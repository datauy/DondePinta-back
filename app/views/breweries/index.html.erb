<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= Brewery.model_name.human(count: 2) %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-7">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th class="col-lg-4"><%= Brewery.human_attribute_name('name') %></th>
          <th class="col-lg-4"><%= Brewery.human_attribute_name('foursquare_id') %></th>
          <th class="col-lg-4"></th>
        </tr>
      </thead>

      <tbody>
        <% @breweries.each do |brewery| %>
          <tr>
            <td><%= brewery.name %></td>
            <td><%= link_to brewery.foursquare_id, brewery.foursquare_url %></td>
            <td class="text-right">
              <%= link_to edit_brewery_path(brewery), class: 'btn btn-primary btn-circle' do %>
                <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
              <%= link_to brewery, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-circle' do %>
                <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-lg-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'helpers.submit.create', model: Brewery.model_name.human %></h3>
      </div>
      <div class="panel-body">
        <%= form_for @brewery do |f| %>
          <%= render 'shared/model_errors', model: @brewery %>

          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', placeholder: Brewery.human_attribute_name('name') %>
          </div>

          <div class="form-group">
            <%= f.text_field :brewery_type, class: 'form-control', placeholder: Brewery.human_attribute_name('brewery_type') %>
          </div>

          <div class="form-group">
            <%= f.text_field :foursquare_id, class: 'form-control', placeholder: Brewery.human_attribute_name('foursquare_id') %>
          </div>

          <div class="checkbox">
            <label>
              <%= f.check_box :serves_people %>Serves people?
            </label>
          </div>

          <%= f.submit class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
