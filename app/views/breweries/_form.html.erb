<div class="row">
  <div class="col-lg-12">
    <%= render 'shared/model_errors', model: @brewery %>
  </div>
</div>

<div class="row">
  <%= form_for @brewery do |f| %>
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :brewery_type %>
        <%= f.text_field :brewery_type, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :foursquare_id %>
        <%= f.text_field :foursquare_id, class: 'form-control' %>
      </div>

      <div class="checkbox">
        <label>
          <%= f.check_box :serves_people %>Serves people?
        </label>
      </div>

      <div class="form-group">
        <%= f.label :beers %>
        <p class="form-control-static"><%= @brewery.beer_descriptions %></p>
      </div>

      <%= f.submit class: 'btn btn-success' %>
      <%= link_to 'Back', breweries_url %>
    </div>

    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Foursquare Info</h3>
        </div>
        <div class="panel-body">
          <dl class="dl-horizontal">
            <dt><%= Brewery.human_attribute_name('department') %></dt>
            <dd><%= @brewery.department %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Brewery.human_attribute_name('city') %></dt>
            <dd><%= @brewery.city %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Brewery.human_attribute_name('address') %></dt>
            <dd><%= @brewery.address %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Brewery.human_attribute_name('phone') %></dt>
            <dd><%= @brewery.phone %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Brewery.human_attribute_name('web') %></dt>
            <dd><%= @brewery.web %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Brewery.human_attribute_name('lat') %></dt>
            <dd><%= @brewery.lat %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Brewery.human_attribute_name('lng') %></dt>
            <dd><%= @brewery.lng %></dd>
          </dl>
        </div>
      </div>
    </div>
  <% end %>
</div>
