<div class="row">
  <div class="col-lg-12">
    <%= render 'shared/model_errors', model: @brewery %>
  </div>
</div>

<div class="row">
  <%= form_for @brewery do |f| %>
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :brewery_type %>
        <%= f.text_field :brewery_type, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :foursquare_id %>
        <%= f.text_field :foursquare_id, class: 'form-control', placeholder: "Foursquare (ID)" %>
      </div>

      <div class="checkbox">
        <label>
          <%= f.check_box :serves_people %>Serves people?
        </label>
      </div>

      <div class="form-group">
        <%= f.label :beers %>
        <p class="form-control-static"><%= @brewery.beer_descriptions %></p>
      </div>

      <%= f.submit class: 'btn btn-success' %>
      <%= link_to 'Back', breweries_url %>
    </div>

    <div class="col-lg-6">
      <%= render 'foursquare/info', model: @brewery %>
      <%= render 'foursquare/open_hours', model: @brewery %>
    </div>
  <% end %>
</div>
