<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Posts</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-7">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th class="col-lg-4"><%= Post.human_attribute_name('title') %></th>
          <th class="col-lg-4"><%= Post.human_attribute_name('date') %></th>
          <th class="col-lg-4"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.date %></td>
            <td class="text-right">
              <%= link_to edit_post_path(post), class: 'btn btn-primary btn-circle' do %>
                <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
              <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-circle' do %>
                <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

    <div class="col-lg-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'helpers.submit.create', model: Post.model_name.human %></h3>
      </div>
      <div class="panel-body">
        <%= render "form" %>

