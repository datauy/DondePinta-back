<div class="row">
  <div class="col-lg-12">
    <%= render 'shared/model_errors', model: @venue %>
  </div>
</div>

<div class="row">
  <%= form_for @venue do |f| %>
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :venue_type %>
        <%= f.text_field :venue_type, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :foursquare_id %>
        <%= f.text_field :foursquare_id, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :beer_ids %>
        <%= f.collection_select :beer_ids, Beer.all, :id, :description, {}, multiple: true,
          class: 'form-control' %>
      </div>

      <%= f.submit class: 'btn btn-success' %>
      <%= link_to 'Back', venues_url %>
    </div>

    <div class="col-lg-6">
      <%= render 'foursquare/info', model: @venue %>
      <%= render 'foursquare/open_hours', model: @venue %>
    </div>
  <% end %>
</div>
