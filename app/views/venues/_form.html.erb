<div class="row">
  <div class="col-lg-12">
    <%= render 'shared/model_errors', model: @venue %>
  </div>
</div>

<div class="row">
  <%= form_for @venue do |f| %>
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :venue_type %>
        <%= f.text_field :venue_type, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :foursquare_id %>
        <%= f.text_field :foursquare_id, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :beer_ids %>
        <%= f.collection_select :beer_ids, Beer.all, :id, :name, {}, multiple: true,
          class: 'form-control' %>
      </div>

      <%= f.submit class: 'btn btn-success' %>
      <%= link_to 'Back', venues_url %>
    </div>

    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Foursquare Info</h3>
        </div>
        <div class="panel-body">
          <dl class="dl-horizontal">
            <dt><%= Venue.human_attribute_name('department') %></dt>
            <dd><%= @venue.department %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Venue.human_attribute_name('city') %></dt>
            <dd><%= @venue.city %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Venue.human_attribute_name('address') %></dt>
            <dd><%= @venue.address %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Venue.human_attribute_name('phone') %></dt>
            <dd><%= @venue.phone %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Venue.human_attribute_name('email') %></dt>
            <dd><%= @venue.email %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Venue.human_attribute_name('web') %></dt>
            <dd><%= @venue.web %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Venue.human_attribute_name('lat') %></dt>
            <dd><%= @venue.lat %></dd>
          </dl>
          <dl class="dl-horizontal">
            <dt><%= Venue.human_attribute_name('lng') %></dt>
            <dd><%= @venue.lng %></dd>
          </dl>
        </div>
      </div>
    </div>
  <% end %>
</div>
